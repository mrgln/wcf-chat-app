<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="Chat" Height="449.333" Width="767" Loaded="Window_Loaded" Closing="Window_Closing" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Padding="0" Background="#FFFFEBEB">
    <Window.Foreground>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Foreground>
    <Grid Margin="38,0,22.667,0.333">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textBoxUsername"  HorizontalAlignment="Left" Height="49" Margin="9.333,10,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="391" FontSize="19" VerticalContentAlignment="Center"/>
        <Button  x:Name ="bConnectDisconnect" Click="Button_Click" Content="Connect" HorizontalAlignment="Left" Margin="433.333,10,0,0" VerticalAlignment="Top" Width="239" Height="49" FontSize="19" Background="White"/>
        <ListBox x:Name="listBoxChat" HorizontalAlignment="Left" Height="233" Margin="9.333,64,0,0" VerticalAlignment="Top" Width="663" FontSize="13"/>
        <TextBox x:Name="textBoxMessage" HorizontalAlignment="Left" Height="89" Margin="9.333,302,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="663" KeyDown="textBoxMessage_KeyDown" FontSize="14"/>

    </Grid>
</Window>
